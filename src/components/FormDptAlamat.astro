---
import ButtonSticky from "./ui/ButtonSticky.astro";
import { Image } from "astro:assets";
import Map from "@/assets/map.png";
import ModalMap from "./ModalMap.astro";
---

<form id="t-alamat" action="#" method="post" class="grid gap-5 mt-3">
    <div>
        <label for="kab" class="block text-xs leading-6">Kabupaten</label>
        <div class="mt-1 relative">
            <select id="kab" class="select-filter select-opt form-element" data-placeholder="Pilih Kabupaten" name="kab">
                <option></option>
                <option value="Kabupaten A">Kabupaten A</option>
                <option value="Kabupaten B">Kabupaten B</option>
                <option value="Kabupaten C">Kabupaten C</option>
                <option value="Kabupaten D">Kabupaten D</option>
                <option value="Kabupaten E">Kabupaten E</option>
                <option value="Kabupaten F">Kabupaten F</option>
                <option value="Kabupaten G">Kabupaten G</option>
            </select>
        </div>
    </div>
    <div>
        <label for="kec" class="block text-xs leading-6">Kecamatan</label>
        <div class="mt-1 relative">
            <select id="kec2" class="select-filter select-opt form-element" data-placeholder="Pilih Kecamatan" name="kec">
                <option></option>
                <option value="Kecamatan A">Kecamatan A</option>
                <option value="Kecamatan B">Kecamatan B</option>
                <option value="Kecamatan C">Kecamatan C</option>
                <option value="Kecamatan D">Kecamatan D</option>
                <option value="Kecamatan E">Kecamatan E</option>
                <option value="Kecamatan F">Kecamatan F</option>
                <option value="Kecamatan G">Kecamatan G</option>
            </select>
        </div>
    </div>
    <div>
        <label for="kel" class="block text-xs leading-6">Desa/Kelurahan</label>
        <div class="mt-1 relative">
            <select id="kel2" class="select-filter select-opt form-element" data-placeholder="Pilih Desa/Kelurahan" name="kel">
                <option></option>
                <option value="Desa/Kelurahan A">Desa/Kelurahan A</option>
                <option value="Desa/Kelurahan B">Desa/Kelurahan B</option>
                <option value="Desa/Kelurahan C">Desa/Kelurahan C</option>
                <option value="Desa/Kelurahan D">Desa/Kelurahan D</option>
                <option value="Desa/Kelurahan E">Desa/Kelurahan E</option>
                <option value="Desa/Kelurahan F">Desa/Kelurahan F</option>
                <option value="Desa/Kelurahan G">Desa/Kelurahan G</option>
            </select>
        </div>
    </div>
    <div class="grid grid-cols-2 gap-3">
        <div>
            <label for="rt" class="block text-xs leading-6">RT</label>
            <div class="mt-1 relative">
                <select id="rt" class="select-filter select-opt form-element" data-placeholder="Pilih RT" name="rt">
                    <option></option>
                    <option value="RT 01">RT 01</option>
                    <option value="RT 02">RT 02</option>
                    <option value="RT 03">RT 03</option>
                    <option value="RT 04">RT 04</option>
                    <option value="RT 05">RT 05</option>
                    <option value="RT 06">RT 06</option>
                    <option value="RT 07">RT 07</option>
                </select>
            </div>
        </div>
        <div>
            <label for="rw" class="block text-xs leading-6">RW</label>
            <div class="mt-1 relative">
                <select id="rw" class="select-filter select-opt form-element" data-placeholder="Pilih RW" name="rw">
                    <option></option>
                    <option value="RW 01">RW 01</option>
                    <option value="RW 02">RW 02</option>
                    <option value="RW 03">RW 03</option>
                    <option value="RW 04">RW 04</option>
                    <option value="RW 05">RW 05</option>
                    <option value="RW 06">RW 06</option>
                    <option value="RW 07">RW 07</option>
                </select>
            </div>
        </div>
    </div>
    <div>
        <label for="tps" class="block text-xs leading-6">TPS</label>
        <div class="mt-1 relative">
            <select id="tps2" class="select-filter select-opt form-element" data-placeholder="Pilih TPS" name="tps">
                <option></option>
                <option value="TPS A">TPS A</option>
                <option value="TPS B">TPS B</option>
                <option value="TPS C">TPS C</option>
                <option value="TPS D">TPS D</option>
                <option value="TPS E">TPS E</option>
                <option value="TPS F">TPS F</option>
                <option value="TPS G">TPS G</option>
            </select>
        </div>
    </div>
    <div>
        <label for="alamat" class="block text-xs leading-6">Alamat</label>
        <div class="mt-1 relative">
            <textarea name="alamat" id="alamat" cols="30" rows="10" placeholder="Masukkan alamat" class="block w-full rounded-xl border-0 py-3.5 ring-1 ring-inset ring-[#E7E9F0] placeholder:text-[#B7BECD] focus:ring-1 focus:ring-inset focus:ring-primary/30 text-sm sm:leading-6"></textarea>
        </div>
    </div>
    <div>
        <label for="gmap" class="block text-xs leading-6">Pin point Google Maps</label>
        <div class="gmap group grid grid-cols-1 mt-1 relative">
            
            <div class="absolute right-0 -top-[26px] group-[.gmap--filled]:flex hidden gap-1.5 items-center row-start-1 col-start-1 place-self-center">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.43306 13.9168L6.69485 10.7623C6.89603 10.2593 7.19728 9.80249 7.58033 9.41945L14.4995 2.50071C15.3279 1.67229 16.6711 1.67229 17.4995 2.50072C18.3279 3.32914 18.3279 4.67229 17.4995 5.50072L10.5803 12.4194C10.1973 12.8025 9.74042 13.1037 9.23746 13.3049L6.08299 14.5667C5.67484 14.73 5.2698 14.3249 5.43306 13.9168Z" fill="#DA2028"/>
                    <path d="M3.5 5.75C3.5 5.05964 4.05964 4.5 4.75 4.5H10C10.4142 4.5 10.75 4.16421 10.75 3.75C10.75 3.33579 10.4142 3 10 3H4.75C3.23122 3 2 4.23122 2 5.75V15.25C2 16.7688 3.23122 18 4.75 18H14.25C15.7688 18 17 16.7688 17 15.25V10C17 9.58579 16.6642 9.25 16.25 9.25C15.8358 9.25 15.5 9.58579 15.5 10V15.25C15.5 15.9404 14.9404 16.5 14.25 16.5H4.75C4.05964 16.5 3.5 15.9404 3.5 15.25V5.75Z" fill="#DA2028"/>
                </svg>         
                <button type="button" data-toggle="modal" data-dismiss="modal" data-target="#modal-map" class="text-brand text-xs font-bold pl-8 -ml-8 cursor-pointer">Ubah Lokasi</button>               
            </div>
            <div class="group-[.gmap--filled]:flex hidden p-4 gap-2 items-start row-start-1 col-start-1 place-self-center relative">
                <svg width="14" height="18" viewBox="0 0 14 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M6.61646 17.6259C6.64163 17.6405 6.66141 17.6517 6.67542 17.6596L6.69869 17.6726C6.88441 17.7745 7.1148 17.7738 7.3007 17.6729L7.32458 17.6596C7.33859 17.6517 7.35837 17.6405 7.38354 17.6259C7.43388 17.5967 7.50581 17.5542 7.59625 17.4985C7.77705 17.3872 8.03229 17.223 8.33718 17.0076C8.94591 16.5776 9.75812 15.9395 10.5721 15.1061C12.1922 13.4474 13.875 10.9551 13.875 7.75C13.875 3.95304 10.797 0.875 7 0.875C3.20304 0.875 0.125 3.95304 0.125 7.75C0.125 10.9551 1.80777 13.4474 3.42788 15.1061C4.24188 15.9395 5.05409 16.5776 5.66282 17.0076C5.96771 17.223 6.22295 17.3872 6.40375 17.4985C6.49419 17.5542 6.56612 17.5967 6.61646 17.6259ZM7 10.25C8.38071 10.25 9.5 9.13071 9.5 7.75C9.5 6.36929 8.38071 5.25 7 5.25C5.61929 5.25 4.5 6.36929 4.5 7.75C4.5 9.13071 5.61929 10.25 7 10.25Z" fill="#DA2028"/>
                </svg>                               
                <div class="flex-1 font-semibold text-xs">Ancol Mekar, Kec. Arjasari, Kelurahan Cinunuk, Desa Gempolsari, Kab. Bandung 40215</div>
            </div>
            <div class="group-[.gmap--filled]:hidden flex gap-2 items-center row-start-1 col-start-1 place-self-center relative">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.43306 13.9168L6.69485 10.7623C6.89603 10.2593 7.19728 9.80249 7.58033 9.41945L14.4995 2.50071C15.3279 1.67229 16.6711 1.67229 17.4995 2.50072C18.3279 3.32914 18.3279 4.67229 17.4995 5.50072L10.5803 12.4194C10.1973 12.8025 9.74042 13.1037 9.23746 13.3049L6.08299 14.5667C5.67484 14.73 5.2698 14.3249 5.43306 13.9168Z" fill="#DA2028"/>
                    <path d="M3.5 5.75C3.5 5.05964 4.05964 4.5 4.75 4.5H10C10.4142 4.5 10.75 4.16421 10.75 3.75C10.75 3.33579 10.4142 3 10 3H4.75C3.23122 3 2 4.23122 2 5.75V15.25C2 16.7688 3.23122 18 4.75 18H14.25C15.7688 18 17 16.7688 17 15.25V10C17 9.58579 16.6642 9.25 16.25 9.25C15.8358 9.25 15.5 9.58579 15.5 10V15.25C15.5 15.9404 14.9404 16.5 14.25 16.5H4.75C4.05964 16.5 3.5 15.9404 3.5 15.25V5.75Z" fill="#DA2028"/>
                </svg>         
                <button type="button" data-toggle="modal" data-dismiss="modal" data-target="#modal-map" class="text-brand text-base font-bold p-3 pl-8 -ml-8 cursor-pointer">Pilih Lokasi</button>               
            </div>

            <Image src={Map} alt="Pin map" class="w-full aspect-[10/3] object-cover rounded-xl row-start-1 col-start-1" />
        </div>
    </div>

    <ModalMap />
    
    <ButtonSticky />
</form>
